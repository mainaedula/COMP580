  <function name="keyHook" parameters="keyCode"><![CDATA[
    if (ToInt(keyCode) = 38) {
      HandleSingleCommand ("north")
    }
    else if (ToInt(keyCode) = 40) {
      HandleSingleCommand ("south")
    }
    else if (ToInt(keyCode) = 37) {
      HandleSingleCommand ("west")
    }
    else if (ToInt(keyCode) = 39) {
      HandleSingleCommand ("east")
    }
    else if ((ToInt(keyCode) <= 90) and (ToInt(keyCode) >= 65)) {
      HandleSingleCommand ("select")
    }
    else if (ToInt(keyCode) = 32) {
      HandleSingleCommand ("speak")
    }
  ]]></function>
